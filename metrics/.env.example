# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=your-org
INFLUXDB_BUCKET=server-metrics

# Metrics Collection Interval (seconds)
COLLECTION_INTERVAL=10

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
# Danh sách User ID được phép sử dụng bot (cách nhau bởi dấu phẩy)
# Bỏ trống để cho phép tất cả users
TELEGRAM_ALLOWED_USERS=123456789,987654321

# Auto-send status (bỏ trống để tắt tính năng)
TELEGRAM_AUTO_SEND_CHAT_ID=
# Interval gửi status tự động (giây), mặc định 3600 = 1 giờ
TELEGRAM_AUTO_SEND_INTERVAL=3600

# Alert Configuration (cảnh báo khi vượt ngưỡng)
# Chat ID nhận cảnh báo (có thể giống hoặc khác AUTO_SEND_CHAT_ID)
TELEGRAM_ALERT_CHAT_ID=
# Ngưỡng cảnh báo (%)
ALERT_CPU_THRESHOLD=80
ALERT_RAM_THRESHOLD=85
ALERT_GPU_THRESHOLD=90
ALERT_DISK_THRESHOLD=90
# Kiểm tra mỗi X giây (mặc định 60s)
ALERT_CHECK_INTERVAL=60
# Cooldown giữa các alert (giây, mặc định 300s = 5 phút)
ALERT_COOLDOWN=300
